   "source": [
    "# Compute the weighted sum of the inputs at teh node to the output layer\n",
    "z_2 = a_11 * weights[4] + a_12 * weights[5] + biases[2]\n",
    "\n",
    "print('The weighted sum for the input nodes in the output layer is {}'.format(np.around(z_2, decimals=4)))"
   ]
  },
  {
